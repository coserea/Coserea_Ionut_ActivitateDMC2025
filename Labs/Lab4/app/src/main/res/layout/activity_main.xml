<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Buton pentru deschiderea activitatii de introducere a cartii -->
    <Button
        android:id="@+id/buttonAdaugaCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga Carte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- TextView unde vor fi afisate detaliile cartii -->
    <TextView
        android:id="@+id/textViewCarte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nicio carte adaugata"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdaugaCarte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
