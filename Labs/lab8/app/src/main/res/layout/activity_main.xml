<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Butoane navigare către activitățile online -->
        <Button
            android:id="@+id/btnOpenAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaugă online" />

        <Button
            android:id="@+id/btnOpenFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite online"
            android:layout_marginBottom="16dp" />

        <!-- Form local: adăugare student -->
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Nume student" />

        <EditText
            android:id="@+id/editAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Vârstă student"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaugă student"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnShowAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Afișează toți"
            android:layout_marginTop="8dp" />

        <!-- Căutare după nume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editSearchName"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Nume căutare" />

            <Button
                android:id="@+id/btnSearchByName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Caută" />
        </LinearLayout>

        <!-- Filtrare între vârste -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editMinAge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Min" />

            <EditText
                android:id="@+id/editMaxAge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Max" />

            <Button
                android:id="@+id/btnFilterByAge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Filtrează" />
        </LinearLayout>

        <!-- Ștergere după vârstă -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editDeleteAge"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Vârstă &lt;" />

            <Button
                android:id="@+id/btnDeleteLessThan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Șterge" />
        </LinearLayout>

        <!-- Crește vârstă după literă -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editInitiala"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Literă" />

            <Button
                android:id="@+id/btnIncreaseAge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Crește" />
        </LinearLayout>

        <!-- Afișare listă -->
        <LinearLayout
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
